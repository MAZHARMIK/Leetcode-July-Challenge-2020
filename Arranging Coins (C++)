class Solution {
public:
    int arrangeCoins(int n) {
        if(n == 1 || n == 0)
            return n;
        int temp = 0, remaining = n, result = 1;
        while(temp < n){
            temp += 1;
            remaining = remaining-temp;
            if(remaining > temp)
                result++;
            else
                break;
        }
        return result;
    }
};
