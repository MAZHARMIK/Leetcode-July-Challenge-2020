class Solution {
public:
    double solve(double x, long n) {
        if(n == 0) return 1;
        if(n == 1) return x;
        if(n < 0) return solve(1/x, -n);
        double result = solve(x*x, n/2);
        if(n%2 == 0)
            return result;
        return result*x;
    }
    double myPow(double x, int n) {
        return solve(x, n);
    }
};
