//Using DFS approach

class Solution {
public:
    Node* flatten(Node* head) {
        if(head == NULL)
            return head;
        Node* curr = head;
        while(curr && curr->child == NULL) {
            curr = curr->next;
        }
        if(curr == NULL)
            return head;
        Node* next_save = curr->next;
        curr->next = flatten(curr->child);
        curr->child = NULL;
        curr->next->prev = curr;
        Node* temp = curr->next;
        while(temp && temp->next) {
            temp = temp->next;
        }
        temp->next = flatten(next_save);
        if(temp && temp->next)
            temp->next->prev = temp;
        return head;
    }
};
